<Window x:Class="WamesGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WamesGUI"
        xmlns:viewmodel="clr-namespace:WamesGUI.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="Black">
    <Window.Resources>
        <viewmodel:MainWindowViewModel x:Key="MyViewModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource MyViewModel}">
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="145" Margin="0,10,0,0" VerticalAlignment="Top" Width="517" 
                 ItemsSource="{Binding HeadQuarters}" SelectedItem="{Binding SelectedHeadQuarters}"
                 Background="White" FontStyle="Normal" BorderThickness="1"/>

    </Grid>
</Window>
